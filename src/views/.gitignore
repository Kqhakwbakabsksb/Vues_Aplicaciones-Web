# En Git Bash o PowerShell:
cat > .gitignore << 'EOF'
# Dependencias
node_modules/
.npm
.pnpm
.yarn

# Archivos de entorno
.env
.env.local
.env.*.local

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Editor
.vscode/
.idea/

# Build
dist/
dist-ssr/
*.local

# Misc
.DS_Store
*.pem

# Tests
coverage/
.nyc_output

# Vite
*.tmp
.cache/
.temp/
EOF